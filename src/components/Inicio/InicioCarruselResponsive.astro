---
import women from "@assets/women.avif";
import men from "@assets/men.avif";
import kids from "@assets/kids.avif";
---

<div class="carrusel relative">
  <div class="marco overflow-auto">
    <div class="imagenes flex transition-all duration-150 space-x-4 pl-4">




      
      <div class="relative w-11/12 md:w-5/6 shrink-0 h-full">
        <img
          class="w-full h-full object-contain p-2"
          src={women.src}
          alt="Mujer"
        />
        <div
          class="absolute bottom-0 left-0 right-0 h-1/3 bg-linear-to-t from-black/60 to-transparent"
        >
        </div>
        <div class="absolute bottom-1/12 left-10 right-0 z-10">
          <div class="md:text-xl text-white">Mujer</div>
        </div>
      </div>






      <div class="relative w-11/12 md:w-5/6 shrink-0 h-full">
        <img
          class="w-full h-full object-contain p-2"
          src={men.src}
          alt="Hombre"
        />
        <div
          class="absolute bottom-0 left-0 right-0 h-1/3 bg-linear-to-t from-black/60 to-transparent"
        >
        </div>
        <div class="absolute bottom-1/12 left-10 right-0 z-10">
          <div class="md:text-xl text-white">Hombre</div>
        </div>
      </div>

      <div class="relative w-11/12 md:w-5/6 shrink-0 h-full last:pr-4">
        <img
          class="w-full h-full object-contain p-2"
          src={kids.src}
          alt="Niños"
        />
        <div
          class="absolute bottom-0 left-0 right-0 h-1/3 bg-linear-to-t from-black/60 to-transparent"
        >
        </div>
        <div class="absolute bottom-1/12 left-10 right-0 z-10">
          <div class="md:text-xl text-white">Niños</div>
        </div>
      </div>
    </div>
  </div>
</div>
