---
import women from "../../assets/women.avif";
import men from "../../assets/men.avif";
import kids from "../../assets/kids.avif";
---

<div
        class="overflow-hidden hidden categorias md:grid grid-cols-3 grid-rows-1 mt-4 transition-all duration-150 hover:cursor-pointer hover:zoom-20"
      >
        <div class="relative overflow-hidden">
          <img
            class=" transition-all duration-150 object-contain hover:-rotate-2 hover:scale-110"
            src={women.src}
            alt="Women"
          />
          <div
            class="absolute bottom-0 left-0 right-0 h-1/3 bg-linear-to-t from-black/60 to-transparent"
          >
          </div>
          <div class="underline absolute text-xl text-white bottom-1/12 left-10 right-0">
            Mujer
          </div>
        </div>
        <div class="relative overflow-hidden">
          <img
            class=" transition-all duration-150 object-contain hover:-rotate-2 hover:scale-110"
            src={men.src}
            alt="Men"
          />
          <div
            class="absolute bottom-0 left-0 right-0 h-1/3 bg-linear-to-t from-black/60 to-transparent"
          >
          </div>
          <div class="underline absolute text-xl text-white bottom-1/12 left-10 right-0">
            Hombre
          </div>
        </div>

        <div class="relative overflow-hidden">
          <img
            class=" transition-all duration-150 object-contain hover:-rotate-2 hover:scale-110"
            src={kids.src}
            alt="Kids"
          />
          <div
            class="absolute bottom-0 left-0 right-0 h-1/3 bg-linear-to-t from-black/60 to-transparent"
          >
          </div>
          <div class="underline absolute text-xl text-white bottom-1/12 left-10 right-0">
            Ni√±os
          </div>
        </div>
      </div>

