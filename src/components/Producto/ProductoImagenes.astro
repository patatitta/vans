const { ArrayProductoImagenes } = Astro.props;

interface interfazImagen {
  url: string;
}

interface interfazVariacion {

  arrayImages: interfazImagen[]
  color: string
  id: string
}

//console.log("PRODUCTOIMAGENE"+ArrayProductoImagenes);
---


<div class="carrusel w-full h-full relative group overflow-hidden">
  <div class="marco w-full h-full overflow-auto">
{
  ArrayProductoImagenes.variations.map((variacion: interfazVariacion, index: number) => (
    <div
      class={
        index === 0
          ? "flex md:grid  md:grid-cols-2 gap-1 md:max-w-7xl mx-auto left productoImagenes"
          : "hidden  md:grid-cols-2 gap-1 md:max-w-7xl mx-auto left productoImagenes"
      }
      id={variacion.id}
    >
      {variacion.arrayImages.map((imagen: interfazImagen) => (
        <img class="" src={imagen.url} />
      ))}
    </div>
  ))
}
</div>
</div>