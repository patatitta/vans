const { ArrayProductoImagenes } = Astro.props;

interface interfazImagen {
  url: string;
}

interface interfazVariacion {

  arrayImages: interfazImagen[]
  color: string
}
---

{
  ArrayProductoImagenes.variations.map((variacion: interfazVariacion, index: number) => (
    <div
      class={
        index === 0
          ? "grid grid-cols-2 gap-1 md:max-w-7xl mx-auto left productoImagenes"
          : "hidden grid-cols-2 gap-1 md:max-w-7xl mx-auto left productoImagenes"
      }
      id={variacion.color+"Imagenes"}
    >
      {variacion.arrayImages.map((imagen: interfazImagen) => (
        <img class="" src={imagen.url} />
      ))}
    </div>
  ))
}
